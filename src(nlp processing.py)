import re
import spacy

nlp = spacy.load("en_core_web_sm")  # run: python -m spacy download en_core_web_sm

def get_entities(text):
    doc = nlp(text)
    ents = [(ent.text, ent.label_) for ent in doc.ents]
    return ents

def extract_emails(text):
    return re.findall(r'[\w\.-]+@[\w\.-]+\.\w+', text)

def extract_phones(text):
    # simple 10-digit Indian-style phones; adjust regex per locale
    return re.findall(r'\b\d{10}\b', text)

def extract_amounts(text):
    # currency-like numbers (e.g., 1,234.56 or 1234)
    return re.findall(r'[\$â‚¹]?\s?\d{1,3}(?:[,\d]{0,})*(?:\.\d+)?', text)

def extract_dates(text):
    # very basic date patterns
    return re.findall(r'\b(?:\d{1,2}[/-]\d{1,2}[/-]\d{2,4}|\d{4}-\d{2}-\d{2})\b', text)
