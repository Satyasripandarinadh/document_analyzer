import google.generativeai as genai

# Set your Gemini API key
genai.configure(api_key=AIzaSyDBGImggDlT3d_H-eiQdFCAWV35wwJv5OM)

def summarize_text_llm(text):
    """
    Summarize text using Google Gemini LLM.
    Returns a dictionary with the summary.
    """
    try:
        response = genai.chat(
            model="gemini-1.5",  # You can use "gemini-1.5" or "gemini-1.5-turbo"
            messages=[
                {"role": "system", "content": "You are a helpful assistant for summarizing text."},
                {"role": "user", "content": f"Please summarize the following text:\n{text}"}
            ]
        )

        # Extract summary text
        summary_text = response.last
        return {"summary": summary_text}

    except Exception as e:
        print(f"‚ùå Error summarizing text: {e}")
        return {"summary": ""}
